{
  "name": "react-redux-express-template",
  "version": "1.0.0",
  "description": "A boilerplate for developing Express app with React&Redux",
  "main": "index.js",
  "scripts": {
    "heroku-postbuild": "yarn run build",
    "start": "babel-watch app.js",
    "build": "yarn run build:client && yarn run build:server",
    "build:client": "NODE_ENV=production webpack --config=webpack.config.prod.js --progress --colors",
    "build:server": "babel app.js -o bundle-server.js",
    "lint": "eslint public",
    "format": "prettier-eslint --write \"public/**/*.js\" app.js --ignore **/bundle.js",
    "serve": "node bundle-server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.8",
    "express": "^4.16.2",
    "node-sass": "^4.7.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^3.1.3",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-dev-server": "^2.11.0",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.1"
  },
  "devDependencies": {
    "babel-watch": "^2.0.7",
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "prettier-eslint-cli": "^4.7.1"
  }
}
